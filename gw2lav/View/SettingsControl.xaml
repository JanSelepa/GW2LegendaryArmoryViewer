<UserControl x:Class="gw2lav.View.SettingsControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:p="clr-namespace:gw2lav.Properties"
	xmlns:viewModel="clr-namespace:gw2lav.ViewModel">

	<UserControl.DataContext>
		<viewModel:SettingsViewModel />
	</UserControl.DataContext>

	<StackPanel
		Orientation="Vertical"
		Margin="10">

		<TextBlock
			Margin="0,0,0,10"
			FontSize="20"
			Text="{x:Static p:R.settings_apikey_title}" />
		<TextBlock
			Text="{x:Static p:R.settings_apikey_message}" />
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>
			<TextBox
				Grid.Column="0"
				VerticalAlignment="Center"
				TextAlignment="Center"
				Margin="0,0,10,0"
				Text="{Binding ApiKey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
			<Button
				Grid.Column="1"
				Content="{x:Static p:R.btn_apply}"
				Command="{Binding ApplyApiKeyCommand}" />
		</Grid>

	</StackPanel>

</UserControl>
