<Window x:Class="gw2lav.View.DialogWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:gw2lav.View"
	ShowInTaskbar="False"
	WindowStartupLocation="CenterOwner"
	ResizeMode="NoResize"
	SizeToContent="Height"
	Width="600">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<Border
			Name="borderContent"/>

		<StackPanel
			Name="panelButtons"
			Grid.Row="1"
			Orientation="Horizontal"
			Margin="10"
			HorizontalAlignment="Right"
			Visibility="Collapsed">

			<Button
				x:Name="btnPositive"
				MinWidth="64"
				MinHeight="24"
				IsDefault="True"
				Click="OnClickPositive"
				Visibility="Collapsed" />

			<Button
				x:Name="btnNegative"
				MinWidth="64"
				MinHeight="24"
				Margin="10,0,0,0"
				Click="OnClickNegative"
				Visibility="Collapsed" />

		</StackPanel>

	</Grid>
	
</Window>
